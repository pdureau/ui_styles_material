{% if variant != '' and variant|lower != 'default' %}
  {% set variants = variant|split('__') %}
  {% for variant in variants %}
    {% set attributes = attributes.addClass('mdc-fab--' ~ variant|lower|replace({'_': '-'})) %}
  {% endfor %}
{% endif %}

{% if 'touch' in variant %}
<div class="mdc-touch-target-wrapper">
{% endif %}
<button{{ attributes.addClass('mdc-fab').setAttribute('aria-label', 'Favorite') }}>
  <div class="mdc-fab__ripple"></div>
  <span class="mdc-fab__icon material-icons">{{ icon }}</span>
  {% if label and variant == 'extended' %}
  <span class="mdc-fab__label">{{ label }}</span>
  {% endif %}
</button>
{% if 'touch' in variant %}
</div>
{% endif %}
