{#
/**
 * @file
 * Styles page template, override this in your theme.
 */
#}

{% if styles is not empty %}
<div class="mdc-layout-grid">
<div class="mdc-layout-grid__inner">

<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2">
  <h2 class="hidden">{{ "Available styles"|t }}</h2>

  {# List of available styles with anchor links. #}
  <ul class="mdc-list ">
    {% for style in styles %}
      <li class="mdc-list-item">
        <a href="#{{ style.id }}">{{ style.label }}</a>
      </li>
    {% endfor %}
  </ul>

</div>
<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10">

  {% for style in styles %}
    <h3 class="mdc-typography--headline3" id="{{ style.id }}">{{ style.label }}</h3>
    {% if style.description %}
    <p>{{ style.description }}</p>
    {% endif %}
    {% for id, label in style.options %}
      {% set style_attributes = create_attribute().addClass(id).addClass(style.previewed_with) %}
      <p{{ style_attributes }}>{{ label }} ({{ id }})</p>
    {% endfor %}
    <hr>
  {% endfor %}
  
  </div>
</div>
{% endif %}



